<!doctype html>
<html lang="en">
<head>
    {{> head}}
    <title>Наш товарищ</title>
    <script defer src="/js/script.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
</head>
<body>
    {{>modalMenu}}
    <div class="wrapper wrapper-main">
        {{>headerLight}}
        <main class="main">
            {{#with teammate}}
                <div class="current-teammate-container col">
                    <div class="current-teammate-top row">
                        <div class="col current-teammate-avatar">
                            <img src="/img/uploads/{{avatar}}" alt="">
                        </div>
                        <div class="col current-teammate-header">
                            <h2>Имя: {{firstname}}</h2>
                            <h3>Фамилия: {{surname}}</h3>
                            <span>Возраст {{age}} лет/года</span>
                            <div class="current-teammate-role row">
                                <span>Должность: {{name}}</span>
                                <img src="/img/uploads/{{icon}}" alt="">
                            </div>
                        </div>
                    </div>
                    <div class="current-teammate-text col">
                        <h4>Описание:</h4>
                        <p>{{inputHTML description}}</p>
                        <h4>Стек технологий:</h4>
                        <p>{{inputHTML technology_stack}}</p>
                    </div>
                </div>
            {{/with}}
            <h3>Произведения этого автора:</h3>
            <div class="another-records">
                <div class="swiper-container">
                    <!-- Additional required wrapper -->
                    <div class="swiper-wrapper one-stage">
                        <!-- Slides -->
                        {{#each productsByAuthor}}
                            <div class="swiper-slide">
                                <div class="top-product row">
                                    <div class="col top-product-img card-img">
                                        <img src="/img/uploads/{{this.image}}" alt="">
                                    </div>
                                    <div class="col top-product-text card-text">
                                        <h3>{{this.name}}</h3>
                                        <h4>{{this.second_name}}</h4>
                                        <div class="row">
                                            <a class="top-product-link card-link link-to" href="product?productId={{this.id}}">Перейти</a>
                                            <span class="top-product-price  card-price">{{this.price}}₽</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                    <!-- If we need pagination -->
                    <div class="swiper-pagination"></div>

                    <!-- If we need navigation buttons -->
                    <div class="swiper-button-prev"></div>
                    <div class="swiper-button-next"></div>

                </div>
            </div>
        </main>
        {{>footer}}
    </div>

    <script type="module">
        import Swiper from 'https://unpkg.com/swiper/swiper-bundle.esm.browser.min.js';

        let swiper = new Swiper('.swiper-container',{
            loop:true,
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            slidesPerView:3
        })

        window.addEventListener('resize',function (e){
            if(this.innerWidth <= 1000){
                swiper = new Swiper('.swiper-container',{
                    loop:true,
                    navigation: {
                        nextEl: '.swiper-button-next',
                        prevEl: '.swiper-button-prev',
                    },
                    slidesPerView:2
                })
                if(this.innerWidth < 768){
                    swiper = new Swiper('.swiper-container',{
                    loop:true,
                    navigation: {
                        nextEl: '.swiper-button-next',
                        prevEl: '.swiper-button-prev',
                    },
                    slidesPerView:1
                })
            }
            }else{
                swiper = new Swiper('.swiper-container', {
                    loop: true,
                    navigation: {
                        nextEl: '.swiper-button-next',
                        prevEl: '.swiper-button-prev',
                    },
                    slidesPerView: 3
                })
            }
        })
    </script>
</body>
</html>