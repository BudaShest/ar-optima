<div class="side-menu row">
    {{#if isAuthorized}}
        <a href="/personal" class="col auth-block">
            <img class="user-avatar" src="/img/uploads/{{authUserAvatar}}" alt="">
            <span>{{authUserLogin}}</span>
        </a>
    {{else}}
        <a href="/auth#auth-login" class="col auth-block">
            <img src="/img/icons/login.png" alt="">
            <span>Авторизация</span>
        </a>
    {{/if}}
    <div class="col menu-block">
        <img src="/img/icons/menu.png" alt="">
    </div>
</div>